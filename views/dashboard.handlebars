<h1 class="text-3xl font-bold mb-4">Welcome, {{ username }}!</h1>


  
<!-- Main Content -->
  <main class="container mx-auto px-4 py-8">
    <!-- Blog Post Grid -->
<section class="grid grid-cols-3 gap-4">
{{#each blogPosts}}
<div class="bg-white shadow-md p-4">
  <h2 class="text-xl font-semibold">{{ this.title }}</h2>
  <p class="text-gray-500">{{ this.excerpt }}</p>
  <p class="text-gray-400 text-sm mt-2">{{formatDate this.createdAt}}</p>
  <div class="flex justify-end mt-4">
    <a href="/post/{{ this.id }}" class="text-blue-500 hover:text-blue-700">Read More</a>
    <a href="/editpost/{{ this.id }}" class="text-green-500 hover:text-green-700 ml-2">Edit</a>
    <form action="/deletepost/{{ this.id }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?')">
      <button type="submit" class="text-red-500 hover:text-red-700 ml-2">Delete</button>
    </form>
  </div>
</div>
{{/each}}



</section>


    <!-- Add Blog Post Button -->
    <div class="flex justify-center mt-8">
      <a href="/createblog" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Add New Blog Post</a>
    </div>
  </main>